<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B2000000"/> <!-- Semi-transparent background -->
            <stroke android:width="1dp" android:color="@color/aperture_term_main"/> <!-- Orange frame -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B2000000"/> <!-- Semi-transparent background -->
            <stroke android:width="1dp" android:color="@color/aperture_term_main_st"/> <!-- Orange frame -->
        </shape>
    </item>
</selector>
